#!/usr/bin/env bash

playbook='---
- hosts: local
  roles:'

declare -a nar=()
declare -a seen=()

for role in $(for file in "$@"; do xargs <"$file"; done); do
    if [[ " ${seen[*]} " =~ " $role " ]]; then
        continue
    fi

    seen+=("$role")
    if [ -f "$role/tasks/main.yml" ]; then
        playbook+="
    - role: '$role'"
    else
        nar+=("$role")
    fi
done

for role in "${nar[@]}"; do
    printf 'ansible: %s is not a role\n' "$role"
done

ansible-playbook <(printf '%s' "$playbook") --ask-become-pass -i hosts
